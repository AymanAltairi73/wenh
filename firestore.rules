rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Helper functions for role-based access
    function getUserRole(auth) {
      return get(/databases/$(database)/documents/users/$(auth.uid)).data.role;
    }
    
    function isAdmin(auth) {
      return getUserRole(auth) == 'admin';
    }
    
    function isWorker(auth) {
      return getUserRole(auth) == 'worker';
    }
    
    function isCustomer(auth) {
      return getUserRole(auth) == 'customer';
    }
    
    // Workers collection - admins can read all, workers can read/write their own
    match /workers/{workerId} {
      allow read: if request.auth != null && (
        request.auth.uid == workerId || 
        isAdmin(request.auth)
      );
      allow write: if request.auth != null && request.auth.uid == workerId;
    }
    
    // Admins collection - admins can read all, admins can write their own
    match /admins/{adminId} {
      allow read: if request.auth != null && isAdmin(request.auth);
      allow write: if request.auth != null && request.auth.uid == adminId;
    }
    
    // Requests collection - authenticated users can read/write with role-based permissions
    match /requests/{requestId} {
      allow read: if request.auth != null && (
        isCustomer(request.auth) || 
        isWorker(request.auth) || 
        isAdmin(request.auth)
      );
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        request.auth.uid == resource.data.takenBy ||
        isAdmin(request.auth)
      );
      allow delete: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        isAdmin(request.auth)
      );
    }
    
    // Allow list operations on requests collection for all authenticated users
    match /requests {
      allow list: if request.auth != null && (
        isCustomer(request.auth) || 
        isWorker(request.auth) || 
        isAdmin(request.auth)
      );
    }
    
    // Favorites collection - users can only access their own favorites
    match /favorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notifications collection - users can only access their own notifications
    match /notifications/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin stats document - only admins can read/write
    match /admin_stats/stats {
      allow read, write: if request.auth != null && isAdmin(request.auth);
    }
  }
}
