rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Workers collection - admins can read all, workers can read/write their own
    match /workers/{workerId} {
      allow read: if request.auth != null && (
        request.auth.uid == workerId || 
        isAdmin(request.auth)
      );
      allow write: if request.auth != null && request.auth.uid == workerId;
    }
    
    // Admins collection - admins can read all, admins can write their own
    match /admins/{adminId} {
      allow read: if request.auth != null && isAdmin(request.auth);
      allow write: if request.auth != null && request.auth.uid == adminId;
    }
    
    // Requests collection - authenticated users can read/write
    match /requests/{requestId} {
      allow read, write, create: if request.auth != null;
    }
    
    // Favorites collection - users can only access their own favorites
    match /favorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notifications collection - users can only access their own notifications
    match /notifications/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Helper functions
    function isAdmin(auth) {
      return exists(/databases/$(database)/documents/admins/$(auth.uid));
    }
  }
}
