rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Requests collection - Public read, authenticated write
    match /requests/{requestId} {
      // Anyone can read requests
      allow read: if true;
      
      // Anyone can create requests (customers without registration)
      allow create: if 
        request.resource.data.keys().hasAll(['type', 'area', 'description']) &&
        request.resource.data.type is string &&
        request.resource.data.area is string &&
        request.resource.data.description is string &&
        request.resource.data.status == 'new' &&
        request.resource.data.createdBy == 'anonymous';
      
      // Only authenticated workers can update requests (to take them)
      allow update: if 
        request.auth != null &&
        (
          // Option 1: Worker taking the request
          (
            request.auth.uid in get(/databases/$(database)/documents/workers/$(request.auth.uid)).data.uid &&
            request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'takenBy']) &&
            request.resource.data.status == 'taken' &&
            request.resource.data.takenBy == request.auth.uid
          ) ||
          // Option 2: Admin updating status (e.g. closing/archiving)
          (
            exists(/databases/$(database)/documents/admins/$(request.auth.uid))
          )
        );
    }
    
    // Workers collection - Authenticated access only
    match /workers/{workerId} {
      // Allow list queries for login purposes (any user can query by phone)
      allow list: if true;
      
      // Allow updating lastLogin field after successful password verification
      allow update: if 
        request.auth == null && 
        request.resource.data.keys().hasAll(['lastLogin']) &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastLogin']);
      
      // Only authenticated users can read their own profile
      allow read: if request.auth != null && request.auth.uid == workerId;
      
      // Only authenticated users can create their own profile
      allow create: if 
        request.auth != null && 
        request.auth.uid == workerId &&
        request.resource.data.keys().hasAll(['uid', 'name', 'email', 'phone', 'subscriptionPlan', 'subscriptionStart', 'subscriptionEnd']);
      
      // Only authenticated users can update their own profile
      allow update: if 
        request.auth != null && 
        request.auth.uid == workerId;
      
      // Admin can read all workers
      allow read: if 
        request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection - Admin access only
    match /admins/{adminId} {
      // Allow list queries for login purposes (any user can query by phone)
      allow list: if true;
      
      // Allow updating lastLogin field after successful password verification (Legacy/Migration support)
      allow update: if 
        request.auth == null && 
        request.resource.data.keys().hasAll(['lastLogin']) &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastLogin']);
      
      // Allow read for login (query by phone) and admin access
      allow read: if 
        true; // Simplified for login check - strictness handled by application logic & data structure
      
      // JIT Migration: Allow creation if ID matches Auth UID
      allow create: if
        request.auth != null &&
        request.auth.uid == adminId;

      // JIT Migration: Allow deletion of OLD doc if authorized by shadow email (which contains the phone)
      // This is a heuristic: If logged in user (Auth) has email 'admin_<phone>@wenh.com',
      // they can delete the doc where phone == <phone>.
      allow delete: if
        request.auth != null &&
        request.auth.token.email == 'admin_' + resource.data.phone + '@wenh.com';

      // General Write: Allow if Auth UID matches Doc ID (Admin updating self)
      allow write: if 
        request.auth != null && 
        request.auth.uid == adminId;
    }
    
    // Favorites collection - User access only
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Drafts collection - User access only
    match /drafts/{draftId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Notifications collection - User access only
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Users collection - User access only
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
  }
}
