rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Requests collection - Public read, authenticated write
    match /requests/{requestId} {
      // Anyone can read requests
      allow read: if true;
      
      // Anyone can create requests (customers without registration)
      allow create: if 
        request.resource.data.keys().hasAll(['type', 'area', 'description']) &&
        request.resource.data.type is string &&
        request.resource.data.area is string &&
        request.resource.data.description is string &&
        request.resource.data.status == 'new' &&
        request.resource.data.createdBy == 'anonymous';
      
      // Only authenticated workers can update requests (to take them)
      allow update: if 
        request.auth != null &&
        (
          // Option 1: Worker taking the request
          (
            request.auth.uid in get(/databases/$(database)/documents/workers/$(request.auth.uid)).data.uid &&
            request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'takenBy']) &&
            request.resource.data.status == 'taken' &&
            request.resource.data.takenBy == request.auth.uid
          ) ||
          // Option 2: Admin updating status (e.g. closing/archiving)
          (
            exists(/databases/$(database)/documents/admins/$(request.auth.uid))
          )
        );
    }
    
    // Workers collection
    match /workers/{workerId} {
      // 1. READ: Open for login lookups (query by phone)
      allow list: if true;
      allow read: if true; // Generalized read for simplicity in this context

      // 2. CREATE/UPDATE/DELETE (Owner): Authenticated user can manage their own document (Migration Target)
      allow create, update, delete: if 
        request.auth != null && 
        request.auth.uid == workerId;

      // 3. UPDATE (Anon): Allow updating lastLogin only (Legacy/Login flow)
      allow update: if 
        request.auth == null && 
        request.resource.data.keys().hasAll(['lastLogin']) &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastLogin']);
      
      // 4. DELETE (Migration Cleanup): Allow deleting unrelated doc if token email matches phone
      allow delete: if
        request.auth != null &&
        resource.data.phone == request.auth.token.email.replace('admin_', '').replace('@wenh.com', '');
      
      // Admin can read all workers (redundant if read is true, but good for explicit intent)
      allow read: if 
        request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection
    match /admins/{adminId} {
      // 1. READ: Open for login lookups (query by phone)
      allow read: if true;
      
      // 2. CREATE/UPDATE/DELETE (Owner): Authenticated user can manage their own document (Migration Target)
      allow create, update, delete: if 
        request.auth != null && 
        request.auth.uid == adminId;

      // 3. UPDATE (Anon): Allow updating lastLogin only (Legacy/Login flow)
      allow update: if 
        request.auth == null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastLogin']);
      
      // 4. DELETE (Migration Cleanup): Allow deleting unrelated doc if token email matches phone
      // Note: We check if resource exists to be safe, though delete implies it does.
      allow delete: if
        request.auth != null &&
        resource.data.phone == request.auth.token.email.replace('admin_', '').replace('@wenh.com', '');
    }
    
    // Favorites collection - User access only
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Drafts collection - User access only
    match /drafts/{draftId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Notifications collection - User access only
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Users collection - User access only
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
  }
}
